<!doctype html>
<html>

<head>
    <title>College Clipboard</title>

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.0/mdb.min.css" rel="stylesheet" />


    <link rel="stylesheet" href="style.css">
</head>

<body>
    <div class="container">

        <div class="page-header text-center">
            <h1> <i class="fa-solid fa-turkey"></i>
                <a href="/logout" class="logout">Logout</a>
        </div>
    </div>

    <div class="row">

        <form action="/create" method="post">
            <div class="form-group">
                <label>Name of School</label>
                <input name="name" type="text" class="form-control" id="nameOfschool">
            </div>
            <div class="form-group">
                <label>Location</label>
                <input name="location" type="text" class="form-control" id="location">
            </div>
            <div class="form-group">
                <label>Tuiton</label>
                <input name="tuiton" type="text" class="form-control" id="tuiton">
            </div>

            <div class="form-group">
                <label>Amount of financial compensation</label>
                <input name="compensation" type="text" class="form-control" id="compensation">
            </div>

            <div class="form-group">
                <label>Avg class size</label>
                <input name="classsize" type="text" class="form-control" id="classsize">
            </div>
            <div class="form-group">
                <label>Desired major/program (Y/N)</label>
                <input name="program" type="text" class="form-control" id="program">
            </div>



            <button type="submit" class="btn btn-warning btn-lg">Submit</button>
        </form>
    </div>


    <!-- MDB -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.0/mdb.min.js"></script>
    <script src="main.js"></script>
